
<!--LESSON - need to add app.js?v=1 to ref for js file otherwise chrom gets stuck on cached version of app.js-->
<div id="add-friend-div">

    <div class="row">
        <div class="input-field col s12 onehd">
            <input placeholder="friend's email" id="e-mail-search" type="email" class="validate" data-bind="value: SearchEmail">
        </div>
    </div>

    <div class="row">
        <div class="col s9 onehd">
            <button href="#" class="waves-effect waves-light btn teal darken-3 fifty" data-bind="click: search">
                <i class="material-icons right">search</i>
                Search
            </button>
        </div> 
    </div>

    <div class="row">
        <div class="col s12">
            <ul class="collection" data-bind="foreach: SearchResults" style="border: none;">
                <li class="collection-item avatar grey lighten-4" style="margin: 5px; border-radius: 10px;">
                    <i class="material-icons circle">person</i>
                    <span class="bold" data-bind="text: userTag"></span><br />
                    <p>
                        <span class="teal-text lighten-3">Joined:</span> <span class="grey-text lighten-2" data-bind="text: joined_date"></span><br>
                        <span class="teal-text lighten-3">Email:</span> <span class="grey-text lighten-2" data-bind="text: email"></span><br>
                    </p>
                        <button class="secondary-content" data-bind="click: $parent.requestFriendship"><i class="material-icons icon-black">add</i></button>
                </li>
            </ul>
        </div>
    </div>
</div>


<div class="awaiting-approval row">
    <div class="col s12" style="border: none;">
        <h2 class="collection-header"><h4>Friend Requests</h4></h2>
        <ul class="collection" data-bind="foreach: FriendRequests">
            <li class="collection-item">
                <div>
                    <span data-bind="text: userTag"></span>
                    <button data-bind="click: $parent.acceptFriendRequest" class="secondary-content">Accept</button>
                    <button data-bind="click: $parent.rejectFriendRequest" class="secondary-content">Reject</button>
                </div>
            </li>
        </ul>
    </div>
</div>

<div class="row">
    <div class="col s12">
        <ul class="collection" style="border: none;" data-bind="foreach: FriendsFeed">
            <li class="collection-item avatar grey lighten-2" style="margin: 5px; border-radius: 10px;">
                <i class="material-icons circle">person</i>
                <span class="bold" data-bind="text: userTag"></span><br />
                <p>
                    <span class="teal-text lighten-3">Activity:</span> <span class="grey-text lighten-2" data-bind="text: activity"></span><br>
                    <span class="teal-text lighten-3">Remarks:</span> <span class="grey-text lighten-2" data-bind="text: remarks"></span><br>
                    <span class="teal-text lighten-3">Date:</span> <span class="grey-text lighten-2" data-bind="text: dateLogged"></span><br>
                </p>
                <a href="#!" class="secondary-content"><i class="material-icons icon-black">fitness_center</i></a>
            </li>
        </ul>
    </div>
</div>

